<Window x:Class="IndiaTango.Views.LogWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox Grid.Row="0" Margin="5" Name="comboBox1"/>
        <TextBox Grid.Row="1" Margin="5" Name="textBoxLog" Text="{Binding LogText}" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" DataContext="{Binding}" IsReadOnly="True" />
    </Grid>
</Window>
