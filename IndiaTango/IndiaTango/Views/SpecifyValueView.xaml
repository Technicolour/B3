<Window x:Class="IndiaTango.Views.SpecifyValueView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding Title}" Height="114" Width="339" DataContext="{Binding}" WindowStartupLocation="CenterOwner" Icon="/IndiaTango;component/Images/edit_32.png" ResizeMode="CanResizeWithGrip" Loaded="Window_Loaded">
    <Grid Height="70">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*" />
            <ColumnDefinition Width="91" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="36" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Button Content="OK" Margin="5" Name="btnOK" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1" IsDefault="True" />
        <TextBlock Text="{Binding Message}" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Top" Grid.ColumnSpan="2" />
        
        <TextBox Grid.Column="0" Grid.Row="1" Name="txtValue" VerticalAlignment="Top" Text="{Binding Text}" Margin="10 5" Visibility="{Binding TextBoxVisible}" MaxLines="2" TabIndex="0" />
        <ComboBox Grid.Column="0" Grid.Row="1" Name="comboValue" VerticalAlignment="Center" Margin="10,5" IsEditable="True" ItemsSource="{Binding ComboBoxItems}" Visibility="{Binding ComboBoxVisible}" Text="{Binding Text}" IsTabStop="True" TabIndex="0" StaysOpenOnEdit="True" />
    </Grid>
</Window>
