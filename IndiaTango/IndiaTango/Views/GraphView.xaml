<Window x:Class="IndiaTango.Views.GraphView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:charts="clr-namespace:Visiblox.Charts;assembly=Visiblox.Charts"
        Title="{Binding ChartTitle}" Height="399" Width="538" Icon="{Binding Icon}">
    <Grid>
        <charts:Chart Title="{Binding ChartTitle}">
            <charts:Chart.YAxis>
                <charts:LinearAxis Title="{Binding YAxisTitle}" />
            </charts:Chart.YAxis>
            <charts:Chart.XAxis>
                <charts:DateTimeAxis Title="Date" />
            </charts:Chart.XAxis>
            <charts:Chart.Series>
                <charts:LineSeries DataSeries="{Binding ChartSeries}" ShowPoints="True" SelectionMode="MultiplePoints" SelectedItems="{Binding SelectedPoints}" />
            </charts:Chart.Series>
            <charts:Chart.Behaviour>
                <charts:ZoomBehaviour />
            </charts:Chart.Behaviour>
        </charts:Chart>
    </Grid>
</Window>
