<Window x:Class="IndiaTango.Views.GraphView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:charts="clr-namespace:Visiblox.Charts;assembly=Visiblox.Charts"
        Title="{Binding ChartTitle}" Height="400" Width="800" Icon="{Binding Icon}">
    <Grid Grid.Column="1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="160" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <charts:Chart Title="{Binding ChartTitle}" Grid.Column="0" Grid.RowSpan="6">
            <charts:Chart.YAxis>
                <charts:LinearAxis Title="{Binding YAxisTitle}" />
            </charts:Chart.YAxis>
            <charts:Chart.XAxis>
                <charts:DateTimeAxis Title="Date" />
            </charts:Chart.XAxis>
            <charts:Chart.Series>
                <charts:LineSeries DataSeries="{Binding ChartSeries}" ShowPoints="True" SelectionMode="MultiplePoints" SelectedItems="{Binding SelectedPoints}" />
            </charts:Chart.Series>
            <charts:Chart.Behaviour>
                <charts:ZoomBehaviour />
            </charts:Chart.Behaviour>
        </charts:Chart>
        <TextBlock Margin="5" Grid.Column="1" Grid.Row="0" Text="Value:" FontWeight="Bold" />
        <TextBlock Margin="5" Grid.Column="1" Grid.Row="1" Text="{Binding SelectedDataValue}" />
        <TextBlock Margin="5" Grid.Column="1" Grid.Row="2" Text="Timestamp:" FontWeight="Bold" />
        <TextBlock Margin="5" Grid.Column="1" Grid.Row="3" Text="{Binding SelectedTimestamp}" />
    </Grid>
</Window>
